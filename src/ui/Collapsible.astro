---
export interface Props {
    sumaryText: string;
}

const { sumaryText } = Astro.props;
---

<details
    open
    class="m-5 rounded-lg bg-white px-4 py-2 shadow-md [&>p]:mb-3 [&>p]:text-justify"
>
    <summary class="cursor-pointer pb-2 text-xl font-semibold"
        >{sumaryText}</summary
    >
    <slot />
</details>
