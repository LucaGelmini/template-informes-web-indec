---
import Hamburguer from "./Hamburguer.astro";
import Logo_Indec from "../../../ui/icons/Logo_Indec.png";
import pages from "../../../helpers/pages";
---

<header class="w-full border-b-2 border-gray-200 bg-gray-100">
    <div
        class="m-auto flex h-28 max-w-6xl items-center justify-between px-2 md:px-10"
    >
        <a href="./" class="flex h-full items-center"
            ><h1
                class="text-center text-xl font-semibold text-gray-500 md:text-3xl"
            >
                Intercambio comercial argentino
            </h1>
        </a>
        <a href="https://www.indec.gob.ar/" class="h-full">
            <img
                src={Logo_Indec}
                alt="logo del indec"
                class="h-full w-auto object-scale-down"
            />
        </a>
    </div>
    <nav
        class="flex h-fit w-full flex-col items-center border-t-2 border-gray-200 py-2 md:hidden md:w-4/5 md:rounded-full"
    >
        <Hamburguer menuId="collapsibleHeader" id="hamburguer" />
        <ul
            class="h-0 w-full origin-top scale-y-0 overflow-hidden border-b border-gray-300 bg-gray-200 duration-300 md:hidden"
            id="collapsibleHeader"
        >
            {
                Object.keys(pages).map((page) => (
                    <li class="h-full w-full border-b border-gray-600 hover:bg-gray-300">
                        <a href={pages[page]} class="inline-block w-full">
                            <p class="my-5 block px-5">{page}</p>
                        </a>
                    </li>
                ))
            }
        </ul>
    </nav>
</header>
